{
  "name": "Nexdom Edge BFF",
  "slug": "nexdom_edge_bff",
  "version": "0.1.0",
  "description": "BFF + UI para Home Assistant, con auto-esquema y tiles.",
  "url": "https://github.com/nexdom/ha-addons",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "services",
  "init": false,
  "homeassistant_api": true,
  "auth_api": true,
  "hassio_api": true,
  "ingress": true,
  "ingress_port": 8099,
  "panel_icon": "mdi:home-lightning-bolt",
  "ports": {
    "8099/tcp": null
  },
  "ports_description": {
    "8099/tcp": "Web UI (no necesario con Ingress)"
  },
  "options": {
    "features": {
      "lights": true,
      "climate": true,
      "security": true,
      "covers": true,
      "sensors": true,
      "cameras": true,
      "energy": true
    },
    "theme": {
      "primary": "#3b82f6",
      "radius": "0.75rem",
      "logo_url": ""
    },
    "mappings": {}
  },
  "schema": {
    "features": {
      "lights": "bool",
      "climate": "bool",
      "security": "bool",
      "covers": "bool",
      "sensors": "bool",
      "cameras": "bool",
      "energy": "bool"
    },
    "theme": {
      "primary": "str?",
      "radius": "str?",
      "logo_url": "str?"
    },
    "mappings": "dict?"
  }
}

